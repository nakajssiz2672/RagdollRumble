local player = game.Players.LocalPlayer
local mouse = player:GetMouse()
local userInputService = game:GetService("UserInputService")
local gui = player:WaitForChild("PlayerGui"):WaitForChild("ScreenGui")
local messageLabel = gui:WaitForChild("TextLabel")

-- Variables
local currentInput = ""
local cheatCode = "IDDQD" -- Example cheat code (God mode)
local damageMultiplier = 10 -- Set multiplier for one-hit
local messageDuration = 2 -- Duration to show message

-- Function to activate cheats
local function activateCheat()
    print("Cheat Activated: One-hit kills enabled!")
    messageLabel.Visible = true -- Show the message
    wait(messageDuration) -- Wait for a certain duration
    messageLabel.Visible = false -- Hide the message after the duration
end

-- Function to handle enemy hits
local function hitEnemy(enemy)
    local baseDamage = 100 -- Set a base damage value high enough to one-shot
    local totalDamage = baseDamage * damageMultiplier

    if enemy:FindFirstChild("Humanoid") then
        enemy.Humanoid:TakeDamage(totalDamage)
        print("Hit enemy for " .. totalDamage .. " damage!")
    end
end

-- Function to capture input
local function onInputChanged(input)
    if input.UserInputType == Enum.UserInputType.Keyboard then
        currentInput = currentInput .. input.KeyCode.Name

        -- Check if the current input matches the cheat code
        if string.find(currentInput, cheatCode) then
            activateCheat()
            currentInput = "" -- Reset input after activation
        end
    end
end

-- Function to check for hits
local function onHit(target)
    if target:IsA("Model") and target:FindFirstChild("Humanoid") then
        hitEnemy(target)
    end
end

-- Connect input and mouse events
userInputService.InputBegan:Connect(onInputChanged)
mouse.Button1Down:Connect(function()
    local target = mouse.Target
    if target then
        onHit(target)
    end
end)
